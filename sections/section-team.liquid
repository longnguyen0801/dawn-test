{{ 'section-team.css' | asset_url | stylesheet_tag }}
<div class="section-team page-width">
  <div class="section-team__heading">
    <h4 class="section-team__subtitle">{{ section.settings.subtitle }}</h4>
    <h2 class="section-team__title">{{ section.settings.title }}</h2>
    <div class="section-team__description">{{ section.settings.description }}</div>
  </div>
  <div class="section-team__member-list">
    {% for block in section.blocks %}
      {% if block.settings.image != blank %}
        <div class="section-team__member">
          <div class="section-team__member-image">
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}">
          </div>
          <div class="section-team__member-info">
            <h3 class="section-team__member-name">{{ block.settings.title }}</h3>
            <h5 class="section-team__member-subtext">{{ block.settings.subtext }}</h5>
            <div class="section-team__member-social">
              {% if block.settings.fb_link != blank %}
                <a href="{{ block.settings.fb_link }}">
                  {% render 'icon-fb' %}
                </a>
              {% endif %}
              {% if block.settings.ig_link != blank %}
                <a href="{{ block.settings.ig_link }}">
                  {% render 'icon-ig' %}
                </a>
              {% endif %}
              {% if block.settings.tw_link != blank %}
                <a href="{{ block.settings.tw_link }}">
                  {% render 'icon-tw' %}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
{% schema %}
{
  "name": "Section Team",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Get Quality Education"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Team"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "member",
      "name": "Member",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Name",
          "default": "Julian Jameson"
        },
        {
          "type": "text",
          "id": "subtext",
          "label": "Subtext",
          "default": "Profession"
        },
        {
          "type": "text",
          "id": "fb_link",
          "label": "Facebook Link",
          "default": "https://www.facebook.com/"
        },
        {
          "type": "text",
          "id": "tw_link",
          "label": "Twitter Link",
          "default": "https://twitter.com/"
        },
        {
          "type": "text",
          "id": "ig_link",
          "label": "Instagram Link",
          "default": "https://www.instagram.com/"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Section Team"
    }
  ]
}
{% endschema %}